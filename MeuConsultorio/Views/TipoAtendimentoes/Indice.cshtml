@model IEnumerable<MeuConsultorio.Models.TipoAtendimento>

@{
    ViewBag.Title = "Indice";
}

<h2>Indice</h2>

<p>
    @Html.ActionLink("Novo", "Criar")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Codigo
        </th>
        <th>
            Descricao
        </th>
        <th>
            Procedimentos
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.TipoAtendimentoId }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.TipoAtendimentoId }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.TipoAtendimentoId })
        </td>
        <td>
			@item.Codigo
        </td>
        <td>
			@item.Descricao
        </td>
        <td>
			@(item.Procedimentos == null ? "None" : item.Procedimentos.Count.ToString())
        </td>
    </tr>
}

</table>


