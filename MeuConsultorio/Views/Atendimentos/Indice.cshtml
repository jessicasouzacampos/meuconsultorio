@model IEnumerable<MeuConsultorio.Models.Atendimento>

@{
    ViewBag.Title = "Indice";
}

<h2>Indice</h2>

<p>
    @Html.ActionLink("Novo", "Criar")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Codigo
        </th>
        <th>
            NomePaciente
        </th>
        <th>
            DataHora
        </th>
        <th>
            Convenio
        </th>
        <th>
            TipoAtendimento
        </th>
        <th>
            Procedimento
        </th>
        <th>
            Valor
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.AtendimentoId }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.AtendimentoId }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.AtendimentoId })
        </td>
        <td>
			@item.Codigo
        </td>
        <td>
			@item.NomePaciente
        </td>
        <td>
			@String.Format("{0:g}", item.DataHora)
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Convenio).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.TipoAtendimento).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Procedimento).ToString()
        </td>
        <td>
			@String.Format("{0:F}", item.Valor)
        </td>
    </tr>
}

</table>


